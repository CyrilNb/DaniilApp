<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="3"
    android:orientation="horizontal"
    android:background="#b1a9a9">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgViewFacebook"
        android:contentDescription="@string/content_desc_imgView"
        android:clickable="true"
        android:src="@drawable/fb"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgViewTwitter"
        android:contentDescription="blblblb"
        android:clickable="true"
        android:src="@drawable/twitter"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgViewVine"
        android:contentDescription="@string/content_desc_imgView"
        android:clickable="true"
        android:src="@drawable/vine"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgViewInstagram"
        android:contentDescription="@string/content_desc_imgView"
        android:clickable="true"
        android:src="@drawable/insta"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgViewSnapchat"
        android:contentDescription="@string/content_desc_imgView"
        android:clickable="true"
        android:src="@drawable/snap"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgViewYoutube"
        android:contentDescription="@string/content_desc_imgView"
        android:clickable="false"
        android:src="@drawable/youtube"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="8dp" />


</GridLayout>
